#!/bin/bash

set -e -u

cd `dirname $0`

src_dir="`pwd`/usergameup"
dst_fil="../GENERATED_LUA/GENERATED_LUA"

mkdir -p `dirname $dst_fil`
echo "/* the file generated by script, do not modify manually. */" > $dst_fil

for it in `find $src_dir -name "*.lua"`; do
    echo "\"`basename $it`\"," >> $dst_fil
    echo "#include \"$it\""    >> $dst_fil
    echo ","                   >> $dst_fil
done
